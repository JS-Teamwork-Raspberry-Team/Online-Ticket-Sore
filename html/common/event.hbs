<div class="col-sm-6 col-md-4">
    <div class="thumbnail" style="height: 350px">
        <img src="{{image}}" alt="..." width="100%" height="100%"/>
        <div class="caption">
            <h3>{{name}}</h3>
            <div>{{location}}</div>
            <div>{{date}}</div>
