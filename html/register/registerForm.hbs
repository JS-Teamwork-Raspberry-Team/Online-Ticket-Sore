<h1 class="text-center">Register</h1>
<br>
<form method="post" action="#/register">
    <div class="form-group-sm">
        <label for="username" class="control-label">Username</label>
        <input id="username" type="text" class="form-control" name="username" autofocus/>
    </div>
    <div class="form-group-sm">
        <label for="email" class="control-label">Email</label>
        <input id="email" type="email" class="form-control" name="email"/>
    </div>
    <div class="form-group-sm">
        <label for="password" class="control-label">Password</label>
        <input id="password" type="password" class="form-control" name="password"/>
    </div>
    <div class="form-group-sm">
        <label for="repeatPassword" class="control-label">Repeat password</label>
        <input id="repeatPassword" type="password" class="form-control" name="repeatPassword"/>
    </div>
    <div class="form-group-sm">
        <input type="submit" class="btn btn-default" value="Register"/>
    </div>
</form>